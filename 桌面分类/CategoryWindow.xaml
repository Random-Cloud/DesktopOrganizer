<Window x:Class="DesktopOrganizer.CategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Category" Height="300" Width="250"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip"
        ShowInTaskbar="False"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <!-- 1. 在这里补充定义 MenuBtnStyle，防止报错 -->
    <Window.Resources>
        <Style x:Key="MenuBtnStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="3">
                            <ContentPresenter Margin="{TemplateBinding Padding}" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#44FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- 2. 窗口主体 -->
    <Border Style="{StaticResource WindowBodyStyle}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition x:Name="ContentRow" Height="*"/>
            </Grid.RowDefinitions>

            
            <Grid Grid.Row="0">
                <!-- 标题 (可输入修改) -->
                <TextBlock Text="{Binding Title}" 
                           VerticalAlignment="Center" 
                           Margin="10,0,0,0" 
                           FontWeight="Bold" 
                           Foreground="White"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0">
                    <!--折叠/展开-->
                    <Button x:Name="CatFoldBtn" 
                            Content="▼" 
                            Click="ToggleFold_Click"
                            Width="30" Height="30" Margin="0,0,5,0"
                            ToolTip="折叠/展开"
                            Style="{StaticResource MenuBtnStyle}"
                            FontSize="12" FontWeight="Bold"/>

                    <Button Content="⋮" 
                            Click="Menu_Click" 
                            Width="30" Height="30"
                            Style="{StaticResource MenuBtnStyle}"
                            FontSize="16" FontWeight="Bold"/>
                </StackPanel>
            </Grid>

            <!-- 菜单弹出框  -->
            <Popup x:Name="CatMenu" Placement="Bottom" HorizontalOffset="-100" VerticalOffset="10" 
                   StaysOpen="False" AllowsTransparency="True">
                <Border Background="#2D2D30" BorderBrush="#555" BorderThickness="1" CornerRadius="5" Padding="5">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.5"/>
                    </Border.Effect>
                    <StackPanel Width="120">
                        <Button Content="新建窗口" Click="New_Click" Style="{StaticResource MenuBtnStyle}"/>
                        <Separator Background="#555" Margin="2"/>
                        <Button Content="删除本窗口" Foreground="#FF6666" Click="Delete_Click" Style="{StaticResource MenuBtnStyle}"/>
                    </StackPanel>
                </Border>
            </Popup>

            <!-- 分隔线 -->
            <Border Grid.Row="0" VerticalAlignment="Bottom" Height="1" Background="#33FFFFFF"/>

            <!-- 3. 图标放置区 (ScrollViewer + WrapPanel) -->
            <!-- AllowDrop 必须在 Window 上设置，这里只负责显示 -->
            <ScrollViewer Grid.Row="1" Margin="5" VerticalScrollBarVisibility="Auto">
                <WrapPanel x:Name="IconPanel" ItemWidth="75" ItemHeight="90">
                    <!-- 后台代码会动态在这里添加 Button -->
                </WrapPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>