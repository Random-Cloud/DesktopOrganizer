<Window x:Class="DesktopOrganizer.CategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Category" Height="300" Width="250"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <!-- 1. 在这里补充定义 MenuBtnStyle，防止报错 -->
    <Window.Resources>
        <Style x:Key="MenuBtnStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="3">
                            <ContentPresenter Margin="{TemplateBinding Padding}" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#44FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- 2. 窗口主体 -->
    <!-- WindowBodyStyle 来自 App.xaml，应该已经定义好了 -->
    <Border Style="{StaticResource WindowBodyStyle}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 标题 (可输入修改) -->
            <!-- 这里用 TextBox 允许用户改名，你也可以绑定 Data.Title -->
            <TextBox Text="{Binding Title, Mode=TwoWay}" 
                     x:Name="TitleBox"
                     Background="Transparent" 
                     Foreground="White" 
                     BorderThickness="0" 
                     VerticalAlignment="Center" 
                     Margin="15,0,100,0" 
                     FontSize="14"
                     FontWeight="Bold"/>

            <!-- 右上角菜单按钮 -->
            <Button HorizontalAlignment="Right" Width="30" Height="30" 
                    Background="Transparent" BorderThickness="0" Foreground="White" 
                    Click="Menu_Click" Cursor="Hand">
                <TextBlock Text="⋮" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Button>

            <!-- 菜单弹出框 (命名为 CatMenu，与后台代码对应) -->
            <Popup x:Name="CatMenu" Placement="Bottom" HorizontalOffset="-100" VerticalOffset="10" 
                   StaysOpen="False" AllowsTransparency="True">
                <Border Background="#2D2D30" BorderBrush="#555" BorderThickness="1" CornerRadius="5" Padding="5">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.5"/>
                    </Border.Effect>
                    <StackPanel Width="120">
                        <Button Content="新建窗口" Click="New_Click" Style="{StaticResource MenuBtnStyle}"/>
                        <Separator Background="#555" Margin="2"/>
                        <Button Content="删除本窗口" Foreground="#FF6666" Click="Delete_Click" Style="{StaticResource MenuBtnStyle}"/>
                    </StackPanel>
                </Border>
            </Popup>

            <!-- 分隔线 -->
            <Border Grid.Row="0" VerticalAlignment="Bottom" Height="1" Background="#33FFFFFF"/>

            <!-- 3. 图标放置区 (ScrollViewer + WrapPanel) -->
            <!-- AllowDrop 必须在 Window 上设置，这里只负责显示 -->
            <ScrollViewer Grid.Row="1" Margin="5" VerticalScrollBarVisibility="Auto">
                <WrapPanel x:Name="IconPanel" ItemWidth="75" ItemHeight="90">
                    <!-- 后台代码会动态在这里添加 Button -->
                </WrapPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>