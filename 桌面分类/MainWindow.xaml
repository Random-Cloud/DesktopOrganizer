<Window x:Class="DesktopOrganizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainController" Height="320" Width="450"
        MinHeight="200" MinWidth="300"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip"
        ShowInTaskbar="False" 
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <!-- 1. 窗口资源定义 (必须放在最前面，否则会报错) -->
    <Window.Resources>
        <!-- 菜单按钮的统一样式 -->
        <Style x:Key="MenuBtnStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="3">
                            <ContentPresenter Margin="{TemplateBinding Padding}" VerticalAlignment="Center"/>
                        </Border>
                        <!-- 简单的鼠标悬停变色效果 -->
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#44FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- 2. 窗口主体内容 -->
    <!-- 注意：WindowBodyStyle 是在 App.xaml 中定义的，如果报错请检查 App.xaml -->
    <Border Style="{StaticResource WindowBodyStyle}">
        <Grid Margin="10">
            <!--<Grid.ColumnDefinitions>
                <ColumnDefinition Width="18*"/>
                <ColumnDefinition Width="89*"/>
            </Grid.ColumnDefinitions>-->
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition x:Name="MainContentRow" Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Grid.ColumnSpan="2">

                <StackPanel Orientation="Horizontal" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Center"
                Margin="10,0,0,0">
                    <TextBlock Text="日历 /" FontWeight="Bold" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                    <TextBlock x:Name="MainTitleText" Text="主面板" FontWeight="Bold" FontSize="14" Foreground="White" Margin="5,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Center" 
                Margin="0,0,10,0">

                    <Button x:Name="FoldBtn" 
                Content="▼" 
                Click="ToggleFold_Click"
                Width="20" Height="20"
                Margin="0,0,10,0"
                Style="{StaticResource MenuBtnStyle}"
                ToolTip="折叠/展开"
                FontSize="10" FontWeight="Bold"
                VerticalAlignment="Center"/>

                    <Button x:Name="MenuBtn"
                Width="30" Height="30"
                Background="Transparent" BorderThickness="0" Foreground="White"
                Click="MenuButton_Click" Cursor="Hand"
                VerticalAlignment="Center">
                        <TextBlock Text="⋮" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- 下拉菜单 (Popup) -->
            <!-- PlacementTarget="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Grid}}" -->
            <Popup x:Name="SettingsPopup" 
                   Placement="Bottom" 
                   PlacementTarget="{Binding ElementName=MenuBtn}"
                   HorizontalOffset="30" VerticalOffset="0" StaysOpen="False" AllowsTransparency="True" Grid.ColumnSpan="2">
                <Border Background="#2D2D30" BorderBrush="#555" BorderThickness="1" CornerRadius="5" Padding="5">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.5"/>
                    </Border.Effect>
                    <StackPanel Width="150">
                        <!-- 菜单项 -->
                        <Button Content="新建窗口" Click="NewWindow_Click" Style="{StaticResource MenuBtnStyle}"/>
                        <Button Content="隐藏主窗口" Click="DeleteWindow_Click" Style="{StaticResource MenuBtnStyle}"/>

                        <Separator Background="#555" Margin="2"/>

                        <Button Content="清空所有记录" Foreground="#FF6666" Click="ClearAllRecords_Click" Style="{StaticResource MenuBtnStyle}"/>

                        <!-- 开机自启选项 -->
                        <Grid Margin="5,0,5,0" Height="30">
                            <TextBlock Text="开机自启" VerticalAlignment="Center" Foreground="White"/>
                            <CheckBox x:Name="AutoStartCheck" HorizontalAlignment="Right" VerticalAlignment="Center"
                                      Checked="AutoStart_Checked" Unchecked="AutoStart_Unchecked"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </Popup>

            <!-- 分隔线 -->
            <Border Grid.Row="0" VerticalAlignment="Bottom" Height="1" Background="#33FFFFFF" Grid.ColumnSpan="2"/>

            <!-- 日历区域 -->
            <Grid Grid.Row="1" Margin="5,10,5,5" Grid.ColumnSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <!-- 星期头 -->
                    <RowDefinition Height="*"/>
                    <!-- 日期网格 -->
                </Grid.RowDefinitions>

                <!-- 星期表头 -->
                <UniformGrid Rows="1" Columns="7">
                    <TextBlock Text="日" HorizontalAlignment="Center" Foreground="#AAA"/>
                    <TextBlock Text="一" HorizontalAlignment="Center" Foreground="#AAA"/>
                    <TextBlock Text="二" HorizontalAlignment="Center" Foreground="#AAA"/>
                    <TextBlock Text="三" HorizontalAlignment="Center" Foreground="#AAA"/>
                    <TextBlock Text="四" HorizontalAlignment="Center" Foreground="#AAA"/>
                    <TextBlock Text="五" HorizontalAlignment="Center" Foreground="#AAA"/>
                    <TextBlock Text="六" HorizontalAlignment="Center" Foreground="#AAA"/>
                </UniformGrid>

                <!-- 日期网格 (由 C# 代码动态填充) -->
                <UniformGrid x:Name="CalendarGrid" 
                             Grid.Row="1" 
                             Rows="6" 
                             Columns="7" 
                             Margin="0,10,0,0"/>

            </Grid>
        </Grid>
    </Border>
</Window>